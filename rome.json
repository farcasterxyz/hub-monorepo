{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "ignore": [
      "src/abstract-leveldown.d.ts",
      "src/rocksdb.d.ts",
