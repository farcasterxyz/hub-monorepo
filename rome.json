      "packages/hub-web/src/generated/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "src/abstract-leveldown.d.ts",
      "src/rocksdb.d.ts",
      "packages/core/src/protobufs/generated/*",
      "packages/hub-nodejs/src/generated/*",
      "packages/hub-web/src/generated/*"
    ]
  }
}
