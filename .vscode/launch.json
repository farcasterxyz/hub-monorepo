{
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests.v2",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "./node_modules/.bin/jest",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules jest"
      },
      "args": [
        "jest",
        "--runInBand",
        "--watchAll=false",
        "--testNamePattern",
        "${jest.testNamePattern}",
        "--runTestsByPath",
        "${jest.testFile}"
      ]
    }
  ]
}
